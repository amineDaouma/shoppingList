{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User",
    "type": "object",
    "properties": {
        "id": {
            "type": "number"
        },
        "email": {
            "type": "string"
        },
        "username": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "lists": {
            "type": "array",
            "items": {
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "products": {
                        "type": "array",
                        "items" : {
                            "type" : "string"
                        }
                    }
                },
                "required": ["id", "name", "products"]
            }
        }
    },
    "required": ["id", "email", "username", "password", "lists"]
}
